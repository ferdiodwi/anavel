<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F0F5"
    tools:context="com.kelompok2.Activity.Fragment.VendorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- City Input -->

        <!-- Venue Image Slider -->
        <ImageView
            android:id="@+id/ivVenueImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/adatjawa1"
            android:scaleType="centerCrop" />

        <!-- Venue Details -->

        <TextView
            android:id="@+id/tvVenueLocation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dekorasi"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVenueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adat Jawa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvVenuePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 7.500.000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <!-- Rating and Action Buttons -->

        <!-- View Details and Call Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- View Details Button -->
            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="Order"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Call Button -->
            <Button
                android:id="@+id/btnCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="Masukkan Keranjang"
                android:textColor="#FFFFFF" />

        </LinearLayout>


        <!-- Next Button -->



        <ImageView
            android:id="@+id/ivVenueImage2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/sopbuntut"
            android:scaleType="centerCrop" />

        <!-- Venue Details -->

        <TextView
            android:id="@+id/tvVenueLocation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Catering"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVenueName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sop Buntut"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvVenuePrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rp. 25.000 per portion"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Rating and Action Buttons -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <!-- Rating -->
            <TextView
                android:id="@+id/tvRating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ 5.0 (10)"
                android:textSize="16sp"
                android:textColor="#8B0000" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Shortlist Button -->
            <Button
                android:id="@+id/btnShortlist3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="Shortlist"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Share Button -->
            <Button
                android:id="@+id/btnShare3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="Share"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- View Details and Call Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- View Details Button -->
            <Button
                android:id="@+id/btnViewDetails2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="order"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Call Button -->
            <Button
                android:id="@+id/btnCall2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="masukkan keranjang"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Next Button -->


        <ImageView
            android:id="@+id/ivVenueImage3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/muanikah2"
            android:scaleType="centerCrop" />

        <!-- Venue Details -->
        <TextView
            android:id="@+id/tvVenueLocation3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Make Up Artist"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVenueName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monica Hall"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvVenuePrice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 1.200.000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <!-- Rating and Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <!-- Rating -->
            <TextView
                android:id="@+id/tvRating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ 5.0 (10)"
                android:textSize="16sp"
                android:textColor="#8B0000" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Shortlist Button -->
            <Button
                android:id="@+id/btnShortlist3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="Shortlist"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Share Button -->
            <Button
                android:id="@+id/btnShare3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="Share"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- View Details and Call Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- View Details Button -->
            <Button
                android:id="@+id/btnViewDetails3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="View Details"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Call Button -->
            <Button
                android:id="@+id/btnCall3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="Call"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:text="Next"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</ScrollView>
